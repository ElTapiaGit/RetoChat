  </div>

  <!-- Menu de navegacion -->
  <%- include('partials/footer'); %>

  <script>
    async function cargarPerfil() {
      try {
        const res = await fetch('/api/perfil');
        if (!res.ok) throw new Error('No autorizado');
        const data = await res.json();
        
        const lista = document.querySelector('.datos-usuario');
        // Reemplazamos el HTML interno manteniendo la estructura
        lista.innerHTML = `
          <li><strong>Nombre:</strong> ${data.nombre_completo}</li>
          <li><strong>Email:</strong> ${data.correo}</li>
          <li><strong>Edad:</strong> - </li>
          <li><strong>PaÃ­s:</strong> Bolivia </li>
        `;
      } catch (err) {
        console.error(err);
        alert('Error al cargar perfil');
        window.location.href = '/';
      }
    }

    // cerrar sesion
    document.getElementById('btn-logout').addEventListener('click', () => {
      // confirmacion opcional 
      if(confirm('Â¿Seguro que quieres salir?')) {
        window.location.href = '/logout';
      }
    });

    cargarPerfil();
  </script>

