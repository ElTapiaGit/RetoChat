<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Chats</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/chats.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
  <header class="header">
    <h1><i class="bi bi-chat-dots"></i> Chats</h1>
  </header>

  <main class="chat-list" id="chat-list">
    <!-- aqui se cargan los chats -->
  </main>

  <!-- footer o menu de navegacion -->
  <%- include('partials/footer'); %>

  <script>
    async function cargarChats() {
      try {
        const res = await fetch('/api/chats');
        const chats = await res.json();
        const chatList = document.getElementById('chat-list');

        if (chats.length === 0) {
          chatList.innerHTML = '<p class="empty">Aún no realizaste ningun chat.</p>';
          return;
        }

        chats.forEach(chat => {
          const chatItem = document.createElement('div');
          chatItem.classList.add('chat-item');
          // PROCESAR EL ULTIMO MENSAJE
          let ultimoMensajeRaw = chat.ultimo_mensaje || '';
          let mensajeVisual = 'Sin mensajes aún';
          
          if (ultimoMensajeRaw) {
            // si es un sticker (URL de Tenor o termina en .gif)
            const esSticker = ultimoMensajeRaw.includes('media.tenor.com') || 
                              ultimoMensajeRaw.includes('.gif') ||
                              (ultimoMensajeRaw.startsWith('http') && ultimoMensajeRaw.includes('/'));

            if (esSticker) {
              mensajeVisual = '<i class="bi bi-file-image"></i> Sticker';
            } else {
              //texto normal
              mensajeVisual = ultimoMensajeRaw;
            }
          }

          chatItem.innerHTML = `
            <div class="icono-usuario">
              <i class="bi bi-person-circle"></i>
            </div>
            <div class="info-usuario">
              <p><strong>${chat.nombre_completo}</strong></p>
              <p class="preview">${mensajeVisual}</p>
            </div>
          `;
          // evento para redirigir al chat
          chatItem.addEventListener('click', () => {
            window.location.href = `/chat?usuario=${encodeURIComponent(chat.usuario)}`;
          })
          chatList.appendChild(chatItem);
        });
      } catch (error) {
        console.error('Error al cargar chats:', error);
      }
    }
    cargarChats();
  </script>
</body>
</html>
